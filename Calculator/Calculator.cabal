build-type:           Simple
-- extra-source-files:
cabal-version:        >=1.10
extra-source-files:   src/Calculator/AlexLexer.x
                      src/Calculator/HappyParser.y

library
  exposed-modules:    Calculator
                      , Calculator.Tests
  other-modules:      Calculator.HomebrewLexer
                      , Calculator.Evaluator
                      , Calculator.AlexLexer
                      , Calculator.HappyParser
                      , Calculator.Lexer
                      , Calculator.Parser
                      , Calculator.Types
                      , Calculator.MegaLexer
                      , Calculator.MegaParser
                      , Calculator.Css
  build-depends:      base >= 4.7 && < 5
                      , array
                      , containers
                      , lens
                      , mtl
                      , megaparsec
                      , ieee754
                      , haskeline
                      , text
                      , blaze-html
                      , scotty
                      , clay
                      , aeson
                      , bytestring
                      , wai-middleware-static
                      , integration
                      , random
                      , directory
                      , time
                      , wai
                      , http-types
                      , telegram-api
                      , wreq
                      , lens-aeson
                      , filepath
                      , scientific
                      , http-client
                      , http-client-tls
                      , parser-combinators
                      , telegram-bot-simple
  hs-source-dirs:       src
  build-tools:          alex, happy
  default-language:     Haskell2010
  ghc-options:         -O2 -Wall -Werror -fno-warn-unused-matches
                       -fwrite-ide-info -hiedir=.hie

executable Calculator
  main-is:              Main.hs
  build-depends:        base >= 4.7 && < 5
                        , optparse-applicative
                        , Calculator
  hs-source-dirs:       src-exe
  default-language:     Haskell2010
  ghc-options:         -O2 -Wall -Werror -fno-warn-unused-matches
                       -fwrite-ide-info -hiedir=.hie

test-suite Test
  type:                 exitcode-stdio-1.0
  main-is:              MainTest.hs
  hs-source-dirs:       src-test
  default-language:     Haskell2010
  build-depends:        base >= 4.7 && < 5
                        , Calculator


  
